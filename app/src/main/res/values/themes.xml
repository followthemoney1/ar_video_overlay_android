<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ARConcept" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ARConcept.Fullscreen" parent="Theme.ARConcept">
        <item name="android:actionBarStyle">@style/Widget.Theme.ARConcept.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.ARConcept.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/purple_700</item>
        <item name="fullscreenTextColor">@color/purple_700</item>
    </style>
</resources>